<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.rio.puc.lac.android.course.googlemaps"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    
    <!-- 
      TAREFA 
      - Os mapas do Google Maps são baixados por demanda da internet (obrigatório requisitar acesso a internet)
      - MyLocationOverlay utiliza provedores de localização para identificar localização atual (obrigatório requisitar acesso a ambos tipos de localização) 
    -->
        
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        <!-- TAREFA - Inserir obrigatoriedade de uso de biblioteca com.google.android.maps -->
        
        <activity
            android:name=".HelloMapActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>